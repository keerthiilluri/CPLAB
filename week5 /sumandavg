#include<stdio.h>

int main(){
    int a,sum=0,count=0;
    char ans='y';
    while(1){
    printf("Enter a value:");
    scanf("%d",&a);
    sum = sum + a;
    count++;
    printf("Will you add more?(y or n)");
    scanf("%c",&ans);
    if (ans = 'y')break;
    }
    printf("sum = %d\n",sum);
    printf("avg = %f",(float)sum/count);
    }
